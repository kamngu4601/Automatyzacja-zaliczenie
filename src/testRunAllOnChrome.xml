<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Suite1" verbose="1" >
    
    <parameter name="browser" value="CHROME"/> <!-- CHROME / FIREFOX / ... -->
    <parameter name="makeScreenshot" value="ON_FAIL"/> <!-- ON_FAIL / ALWAYS / NEVER -->
    
    <test name="Regression1">
        <classes>
            <class name="selenium.test.automation.tests.LoginTest"/>
            <class name="selenium.test.automation.tests.environment.AddEnvironmentTest"/>
            <class name="selenium.test.automation.tests.version.AddVersionTest"/>
            <class name="selenium.test.automation.tests.AddTagTest"/>
        </classes>
    </test>
</suite>